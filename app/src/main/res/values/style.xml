<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="font_label" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="font_main_text" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="font_extra_text" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="font_button" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="font_confirm_label" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="font_confirm_text" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
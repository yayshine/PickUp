<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/list_padding_top"
    android:paddingLeft="@dimen/list_padding_side"
    android:paddingRight="@dimen/list_padding_side"
    android:paddingBottom="@dimen/list_padding_bottom">

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="@style/font_main_text"
        android:text="삼계탕" />

    <Spinner
        android:id="@+id/spinner_quantity"
        android:layout_width="80dp"
        android:layout_marginRight="@dimen/text_margin"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_price"
        android:layout_width="60dp"
        android:textAlignment="textEnd"
        android:layout_height="wrap_content"
        android:textAppearance="@style/font_main_text"
        android:text="$" />

</LinearLayout>
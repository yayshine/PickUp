<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobile.pickup.Controller.CustomerSide.VendorList.VendorListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/vendor_list_label">

        <TextView
            android:id="@+id/text_name_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorAccent"
            android:text="name" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="wait time" />
        />

    </LinearLayout>


    <ListView
        android:layout_below="@id/vendor_list_label"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_vendor"/>
</RelativeLayout>
